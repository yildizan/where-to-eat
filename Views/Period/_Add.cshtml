@model MSAWeb.Models.Period

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Add Period</h3>
</div>
@using (Ajax.BeginForm("Add", "Period", FormMethod.Post, new AjaxOptions { InsertionMode = InsertionMode.Replace, HttpMethod = "POST" }))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    <div class="modal-body">
        @Html.HiddenFor(x => x.Id)
        @Html.HiddenFor(x => x.Count)
        @Html.HiddenFor(x => x.IsActive)
        @Html.HiddenFor(x => x.IsPending)

        @Html.Label("Length", "Length (days)")
        @Html.TextBoxFor(x => x.Length, new { @class = "form-control" })
    </div>
    <div class="modal-footer">
        <button class="btn btn-success" type="submit">Save</button>
        <button class="btn btn-default" type="button" data-dismiss="modal">Cancel</button>
    </div>
}